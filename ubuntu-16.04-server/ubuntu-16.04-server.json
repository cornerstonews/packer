        "vm_name": "ubuntu-16.04-server",
        "disk_size": "20480",
        "memory": "1024",
        "cpu": "1",
        "iso_url": "../iso/ubuntu-16.04.5-server-amd64.iso",
        "iso_checksum": "24636fd103a2a43c95659f1c3c63718e",
        "iso_checksum_type": "md5",
        "headless": "false",
        "http_directory": ".",
        "preseed_path": "ubuntu-16.04-server-preseed.cfg",
        "output_dir": "../output/",
        "vagrant": "skip"
    },

